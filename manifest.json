{
  "name": "ReallifeRPG",
  "short_name": "ReallifeRPG",
  "version": "1.0",
  "description": "ReallifeRPG Chrome extension",
  "manifest_version": 2,
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://steamcommunity.com/*",
        "http://steamcommunity.com/*"
      ],
      "js": [
        "profile.js"
      ],
      "css": [
        "profile.css"
      ]
    }
  ],
  "web_accessible_resources": [
    "profile.css"
  ]
}
